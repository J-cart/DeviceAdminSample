<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/onboarding_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/image_7" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onboarding_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        app:fontFamily ="@font/poppins_medium"
        android:text="Track your phone"
        android:textAlignment="center"
        android:textColor="@color/purple_600"
        android:textSize="38dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text"
        android:layout_alignStart="@+id/title_text"
        android:layout_alignEnd="@+id/title_text"
        android:text="string/description_page_demo"
        android:textAlignment="center"
        android:textColor="?android:textColorPrimary"
        android:textStyle="normal" />


</RelativeLayout>